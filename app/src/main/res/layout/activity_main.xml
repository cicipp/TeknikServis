<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nursahmelis.teknikservis.MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoşgeldiniz"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvIsletmeAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İşletme Adı"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/etIsletmeAdi"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/krem"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/tvCihazAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cihaz Adı"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/etCihazAdi"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/krem"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvCihazKodu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cihaz Kodu"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/etCihazKodu"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/krem"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/tvArizaTanimi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arıza Tanımı"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/etArizaTanimi"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/krem"
        android:layout_marginTop="20dp" />
    <LinearLayout
        android:id="@+id/llButonlar"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaydet"
            android:id="@+id/kaydet"
            android:onClick="buttonSave"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Göster"
            android:id="@+id/goster"
            android:onClick="buttonLoad"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</LinearLayout>